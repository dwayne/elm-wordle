#!/usr/bin/env bash

#
# Usage: [optimize=0*|1] build-sass output-directory
#

set -euo pipefail

optimize="${optimize:-0}"
out="${1:?}"

src="${project:?}"

if [[ "$optimize" = 0 ]]; then
  sass --embed-sources "$src/sass/index.scss" "$out/index.css"
else
  sass --style=compressed --no-source-map "$src/sass/index.scss" "$out/index.css"
fi
